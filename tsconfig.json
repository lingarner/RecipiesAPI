{
  "compilerOptions": {
    "resolveJsonModule": true,
    "noEmit": true, // or set "emitDeclarationOnly": true
    "allowImportingTsExtensions": true,
    "target": "ES2020",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}
